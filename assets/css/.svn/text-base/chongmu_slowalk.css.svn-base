.dfbox {display:none;}
.dfbox h3 {text-align:right;font-size:13px;color:#666}
.dfbox ul {margin:0;padding:0}
.dfbox ul li {margin:0 !important;padding:0 0 4px 0 !important;border:0 !important;width:100%;line-height:18px;list-style:disc;list-style-position:inside;font-size:12px;background:none !important}
.dfbox ul li:hover {background:none !important}
.dfbox ul li em {color:#f50;font-weight:bold;}
.dfbox dl {margin:10px}
.dfbox dl dt {border:solid 1px #dedede;padding:8px;background:#ededed;}
.dfbox dl dd {padding:8px;font-size:12px}
.dfbox dl dd table {border-top:solid 1px #ccc;border-left:solid 1px #ccc;margin:10px;padding:0}
.dfbox dl dd table th {border-bottom:solid 1px #ccc;border-right:solid 1px #ccc;background:#ccc;font-weight:bold;}
.dfbox dl dd table td {border-bottom:solid 1px #ccc;border-right:solid 1px #ccc;}
